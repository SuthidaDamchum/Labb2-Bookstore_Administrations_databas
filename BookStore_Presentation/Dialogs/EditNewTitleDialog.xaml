<Window x:Class="BookStore_Presentation.Dialogs.EditNewTitleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore_Presentation.Dialogs"
        xmlns:viewmodels="clr-namespace:BookStore_Presentation.ViewModels"
        mc:Ignorable="d"
        Title="EditNewTitleDialog" Height="400" Width="300" >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Top">
            <TextBlock Text="Title:"/>
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="ISBN:"/>
            <TextBox x:Name="IsbnTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Language:"/>
            <ComboBox x:Name="LanguageComboBox" ItemsSource="{Binding LanguageOptions}" SelectedIndex="0" Margin="0,0,0,10"/>

            <TextBlock Text="Price:"/>
            <TextBox x:Name="PriceTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Genre:"/>
            <ComboBox x:Name="GenreComboBox" DisplayMemberPath="GenreName" Margin="0,0,0,10"/>

            <TextBlock Text="Author:"/>
            <ComboBox x:Name="AuthorsComboBox"
                      Width="250"
                      IsEditable="True"
                      IsReadOnly="True"
                      StaysOpenOnEdit="True"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,10"
                      MaxDropDownHeight="200"
                      Text="{Binding SelectedAuthorsText, Mode=OneWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding FullName}"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  Checked="AuthorCheckBox_Changed"
                                  Unchecked="CheckBox_Unchecked"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="OK" Width="60" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="60" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>