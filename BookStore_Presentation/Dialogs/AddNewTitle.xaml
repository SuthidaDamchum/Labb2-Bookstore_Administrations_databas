<Window x:Class="BookStore_Presentation.Dialogs.AddNewTitle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore_Presentation.Dialogs"
        xmlns:viewmodels="clr-namespace:BookStore_Presentation.ViewModels"
        mc:Ignorable="d"
        Title="New book title" Height="490" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=viewmodels:BooksAdminViewModel, IsDesignTimeCreatable=False}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="5*"/>
            <!-- Form content -->
            <RowDefinition Height="15"/>
            <RowDefinition Height="25"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Form content -->
        <StackPanel Margin="10,0,10,0" VerticalAlignment="Center">
            <TextBlock Text="Title:"/>
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="ISBN:"/>
            <TextBox x:Name="IsbnTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Author:"/>
            <ComboBox x:Name="AuthorsComboBox"
                      Width="260"
                      IsEditable="False"
                      IsReadOnly="True"
                      StaysOpenOnEdit="True"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,10"
                      MaxDropDownHeight="200"
                      Text="{Binding SelectedAuthorsText, Mode=OneWay}">

                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding FullName}"
                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                      Checked="AuthorCheckBox_Changed"
                      Unchecked="AuthorCheckBox_Changed"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Language:"/>
            <ComboBox x:Name="LanguageComboBox" ItemsSource="{Binding LanguageOptions}" SelectedIndex="0" Margin="0,0,0,10"/>

            <TextBlock Text="Price:"/>
            <TextBox x:Name="PriceTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Genre:"/>
            <ComboBox x:Name="GenreComboBox" DisplayMemberPath="GenreName" Margin="0,0,0,10"/>

            <TextBlock Text="Publication Date (YYYY-MM-DD):"/>
            <TextBox x:Name="PublicationDateTextBox" Margin="0,0,0,10" ToolTip="Enter date as YYYY-MM-DD"/>

            <TextBlock Text="Pages:"/>
            <TextBox x:Name="PageCountTextBox" Margin="0,0,0,10" ToolTip="Enter number of pages"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.RowSpan="2">
            <Button Content="Save" Width="100" Height="30" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="100" Height="30" Margin="0,0,10,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>