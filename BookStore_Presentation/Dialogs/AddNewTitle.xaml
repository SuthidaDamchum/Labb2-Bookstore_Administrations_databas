<Window x:Class="BookStore_Presentation.Dialogs.AddNewTitle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore_Presentation.Dialogs"
        xmlns:viewmodels="clr-namespace:BookStore_Presentation.ViewModels"
        mc:Ignorable="d"
        Title="New book title" Height="500" Width="350" FontSize="12"
        WindowStartupLocation="CenterScreen"
 
        d:DataContext="{d:DesignInstance Type=viewmodels:BooksAdminViewModel}">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- ISBN -->
            <RowDefinition Height="Auto"/>
            <!-- Language -->
            <RowDefinition Height="Auto"/>
            <!-- Price -->
            <RowDefinition Height="Auto"/>
            <!-- Genre -->
            <RowDefinition Height="Auto"/>
            <!-- Authors -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
        </Grid.RowDefinitions>



        <StackPanel Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Titel:"/>
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="ISBN:"/>
            <TextBox x:Name="IsbnTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Language:"/>
            <ComboBox x:Name="LanguageComboBox" ItemsSource="{Binding LanguageOptions}"  SelectedIndex="0" Margin="0,0,0,10"/>

            <TextBlock Text="Price:"/>
            <TextBox x:Name="PriceTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Genre:"/>
            <ComboBox x:Name="GenreComboBox"  DisplayMemberPath="GenreName"   Margin="0,0,0,10"/>

            <TextBlock Text="Author:"/>
            <ListBox x:Name="AuthorsListBox" SelectionMode="Multiple" DisplayMemberPath="FullName" Margin="0,0,0,10"/>


            <Button Content="Save book" Grid.Row="6" Height="30" VerticalAlignment="Top" Click="SaveButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
<!--ResizeMode="NoResize"-->