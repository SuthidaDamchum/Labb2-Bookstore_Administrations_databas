<Window x:Class="BookStore_Presentation.Dialogs.AddNewTitleDailog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore_Presentation.Dialogs"
        xmlns:viewmodels="clr-namespace:BookStore_Presentation.ViewModels"
        mc:Ignorable="d"
        Title="New book title" Height="530" Width="310"
         WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=viewmodels:AddNewTitleViewModel, IsDesignTimeCreatable=True}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="599*"/>
            <RowDefinition Height="75*"/>

        </Grid.RowDefinitions>

        <StackPanel Margin="0,10,0,0" VerticalAlignment="Top">

            <TextBlock Text="Title:"/>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,10"/>


            <TextBlock Text="ISBN:"/>
            <TextBox Text="{Binding ISBN, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Authors:" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding SelectedAuthorsText}" Margin="0,0,0,10"/>
            <ComboBox x:Name="AuthorsComboBox"
          ItemsSource="{Binding Authors}"
          IsEditable="False"
          MaxDropDownHeight="200">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding FullName}"
                      IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


            <TextBlock Text="Language:"/>
            <ComboBox ItemsSource="{Binding LanguageOptions}" SelectedItem="{Binding Language}" Margin="0,0,0,10"/>


            <TextBlock Text="Price:"/>
            <TextBox Text="{Binding PriceText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>


            <TextBlock Text="Genre:"/>
            <ComboBox ItemsSource="{Binding Genres}" DisplayMemberPath="GenreName" SelectedItem="{Binding SelectedGenre}" Margin="0,0,0,10"/>


            <TextBlock Text="Publication Date (YYYY-MM-DD):"/>
            <TextBox Text="{Binding PublicationDateText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" ToolTip="Enter date as YYYY-MM-DD"/>


            <TextBlock Text="Pages:"/>
            <TextBox Text="{Binding PageCountText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" ToolTip="Enter number of pages"/>


            <TextBlock Text="Publisher:"/>
            <ComboBox ItemsSource="{Binding Publishers}" DisplayMemberPath="PublisherName" SelectedItem="{Binding SelectedPublisher}" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0" Grid.Row="1">
            <Button Content="Save" Width="100" Margin="0,0,10,0" Command="{Binding SaveCommand}"  
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

            <Button Content="Cancel" Width="100" Command="{Binding CancelCommand}"   
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>

