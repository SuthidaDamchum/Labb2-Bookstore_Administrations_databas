<Window x:Class="BookStore_Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:UI="clr-namespace:BookStore_Presentation.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=UI:MainWindowViewModel, IsDesignTimeCreatable=False}"
        Title="Bookstore Administration"
        Height="500"
        Width="900"
        Icon="Assets\bookstore.ico"
        WindowStartupLocation="CenterScreen"
        Background="#E5E7EB">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="18,18"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Foreground" Value="#F0F2F5"/>
            <Setter Property="Background" Value="#353945"/>
            <Setter Property="BorderBrush" Value="#23272F"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFD700"/>
                                <Setter Property="Foreground" Value="#23233A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BFA100"/>
                                <Setter Property="Foreground" Value="#23233A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#23272F"/>
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0"
                Background="#23272F"
                BorderBrush="#393945"
                BorderThickness="0,0,1,0"
                CornerRadius="0,12,12,0"
                Padding="0,24,0,24">
            <StackPanel Margin="0,10">
                <!-- LOGO / TITLE -->
                <StackPanel Orientation="Horizontal" Margin="18,0,0,0">
                    <TextBlock Text="📖"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#FFD700"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="BOOKSTORE"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#F0F2F5"
                               VerticalAlignment="Center"
                               FontFamily="Segoe UI Semibold"/>
                </StackPanel>
                <TextBlock Text="Administration"
                           Foreground="#BFBFBF"
                           FontFamily="Segoe UI"
                           FontWeight="Normal" HorizontalAlignment="Center"/>
                <Separator Margin="18,0,18,24" Background="#393945" Padding="20"/>
                <!-- NAV BUTTONS -->
                <Button Content="🗃️ Inventory by Store" Width="170" FontSize="15"
                        HorizontalAlignment="Center"
                        Command="{Binding OpenInventoryByStoreCommand}"
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="18,15,18,0"/>
                <Button Content="📚 Books" HorizontalAlignment="Center"
                        Width="170" FontSize="15"
                        Command="{Binding OpenBookAdminCommand}"
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="18,15,18,0"/>
                <Button Content="✍ Authors"  Width="170" FontSize="15"
                        HorizontalAlignment="Center"
                        Command="{Binding OpenAllAuthorsCommand}"
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="18,15,18,0"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Border Grid.Column="1"
                Background="#F3F4F6"
                Padding="30"
                CornerRadius="20,12,12,0">
            <ContentControl Content="{Binding CurrentViewModel}" />
        </Border>
    </Grid>
</Window>