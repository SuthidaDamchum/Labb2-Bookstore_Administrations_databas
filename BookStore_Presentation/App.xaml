<Application x:Class="BookStore_Presentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:BookStore_Presentation.Views"
             xmlns:UI="clr-namespace:BookStore_Presentation.ViewModels"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10,4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3A3A3D"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Margin="5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A5AFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataTemplates for ViewModels -->
        <DataTemplate DataType="{x:Type UI:InventoryByStoreViewModel}">
            <Views:InventoryByStoreView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type UI:BooksAdminViewModel}">
            <Views:BooksAdminView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type UI:AuthorsAdminViewModel}">
            <Views:AuthorsAdminView />
        </DataTemplate>

    </Application.Resources>
</Application>
