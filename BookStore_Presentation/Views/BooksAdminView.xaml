<UserControl x:Class="BookStore_Presentation.Views.BooksAdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore_Presentation.Views" 
              xmlns:viewmodels="clr-namespace:BookStore_Presentation.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewmodels:BooksAdminViewModel}">



    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Knappen -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10 10 10 10"
             HorizontalAlignment="Center"
             VerticalAlignment="Center" >

            <Button Content="➕Add new book" 
               Margin="10 10 10 10" Padding="3,3" Command="{Binding CreateNewBookTitleCommand }" />

            <Button Content="✏ Edit book detail" Margin="10 10 10 10"
             Padding="3,3" Command="" />

            <Button Content="🗑Delete book" Margin="10 10 10 10"
             Padding="3,3" Command="{Binding DeleteBookFromInventoryCommand}" 
             CommandParameter="{Binding SelectedBook}" />
        </StackPanel>

        <DataGrid Grid.Row="1"
              ItemsSource="{Binding Books}" 
              AutoGenerateColumns="False" 
              IsReadOnly="False" 
              CanUserAddRows="False" 
              FontSize="10"
              SelectedItem="{Binding SelectedBook, Mode=TwoWay}"> 
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn13}" IsReadOnly="True" Width="130"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="130"/>
                <DataGridTextColumn Header="Author" Binding="{Binding AuthorNames}" IsReadOnly="True" Width="120"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" IsReadOnly="True" Width="120"/>
                <DataGridTextColumn Header="Language" Binding="{Binding Language}" Width="100"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=F2}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>