<UserControl x:Class="BookStore_Presentation.Views.InventoryByStoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:UI="clr-namespace:BookStore_Presentation.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=UI:InventoryByStoreViewModel, IsDesignTimeCreatable=True}">



    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>

        </Grid.ColumnDefinitions>

        <!-- Lista butiker -->
        <ListBox ItemsSource="{Binding Stores}"
                 SelectedItem="{Binding SelectedStore}"
                 DisplayMemberPath="StoreName"/>

        <!-- RIGHT SIDE -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Add/Remove -->
                <RowDefinition Height="Auto"/>
                <!-- Increase/Decrease -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
            </Grid.RowDefinitions>


            <!-- ComboBox + Add/Remove buttons -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,10,0,10" VerticalAlignment="Top">
                <ComboBox ItemsSource="{Binding Books}" 
              SelectedItem="{Binding SelectedBook}" 
              DisplayMemberPath="Title"
              Width="250" Margin="0,0,10,0"/>

                <Button Content="Add Book to Store"
            Width="120"
            Margin="10,0,10,0"
            Command="{Binding AddBookToStoreCommand}" />

                <Button Content="Remove Book from Store"
            Width="120"
            Command="{Binding RemoveBookFromStoreCommand}" />
            </StackPanel>

            <!-- Increase/Decrease Quantity Buttons -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10,20,0,10" VerticalAlignment="Top">
                <Button Content="Increase Quantity" 
            Width="120"
            Margin="0,0,10,0"
            Command="{Binding IncreaseQuantityCommand}" />
                <Button Content="Decrease Quantity" 
            Width="120"
            Command="{Binding DecreaseQuantityCommand}" />
            </StackPanel>

            <!-- DataGrid med lagersaldo -->
            <DataGrid ItemsSource="{Binding Inventory}" SelectedItem="{Binding SelectedInventoryItem, Mode=TwoWay}" IsReadOnly="True" Grid.Column="1" AutoGenerateColumns="False" Margin="10,50,0,0">
         
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
            </DataGrid.Columns>
            
            
        </DataGrid>
        </Grid>
    </Grid>
</UserControl>


