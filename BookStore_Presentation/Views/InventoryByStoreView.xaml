<UserControl x:Class="BookStore_Presentation.Views.InventoryByStoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:UI="clr-namespace:BookStore_Presentation.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=UI:InventoryByStoreViewModel, IsDesignTimeCreatable=True}">


    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column="0">
            <TextBlock Text="Stores"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,5"/>
            <ListBox ItemsSource="{Binding Stores}"
                 SelectedItem="{Binding SelectedStore}"
                 DisplayMemberPath="StoreName"
                 Width="150"
                 Height="350"/>
        </StackPanel>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Add/Remove -->
                <RowDefinition Height="Auto"/>
                <!-- Increase/Decrease -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
            </Grid.RowDefinitions>



            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,10,0,0" VerticalAlignment="Top">
                <ComboBox ItemsSource="{Binding Books}" 
                          SelectedItem="{Binding SelectedBook}" 
                          IsTextSearchEnabled="true"
                          IsEditable="true"
                          DisplayMemberPath="Title"
                          Width="180" Margin="0,15,10,0" SelectedIndex="1" />

                <Button Content="➕Add Book to Store"
            Width="Auto" Padding="3 3"

            Margin="5,15,10,0"
            Command="{Binding AddBookToStoreCommand}"  />

                <Button Content="🗑Remove Book from Store"
            Width="Auto"
            Margin="5,15,10,0" Padding="3 3"
                     
                         
            Command="{Binding RemoveBookFromStoreCommand}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10,20,0,10" VerticalAlignment="Top">
                <Button Content="➕Increase Quantity" 
            Width="Auto"  Padding="3 3" 
        
            Margin="0,0,10,0"
            Command="{Binding IncreaseQuantityCommand}" />
                <Button Content="➖Decrease Quantity"  Padding="3 3"
            Width="Auto"                
              
            Command="{Binding DecreaseQuantityCommand}" />
            </StackPanel>

            <DataGrid ItemsSource="{Binding Inventory}"
                  SelectedItem="{Binding SelectedInventoryItem, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  CanUserReorderColumns="False"
                  Margin="10,70,0,0"
                  Grid.Column="1">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" />
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" />
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
                </DataGrid.Columns>

            </DataGrid>
        </Grid>
    </Grid>
</UserControl>


