<UserControl x:Class="BookStore_Presentation.Views.InventoryByStoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:UI="clr-namespace:BookStore_Presentation.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=UI:InventoryByStoreViewModel, IsDesignTimeCreatable=False}">


    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <!-- LEFT NAV -->
            <ColumnDefinition Width="220"/>
            <!-- MAIN CONTENT -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Padding="12"
                CornerRadius="6"
                Background="#F5F5F5"
                BorderBrush="#D0D0D0"
                BorderThickness="1">

            <StackPanel>

                <TextBlock Text="Stores"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <ListBox ItemsSource="{Binding Stores}"
                         SelectedItem="{Binding SelectedStore}"
                         DisplayMemberPath="StoreName"
                         Height="150"
                         Margin="0,0,0,15"/>

                <Separator Margin="0,0,0,15"/>

                <TextBlock Text="Inventory Quantity"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <Button Content="➕ Increase Quantity"
                        Margin="0,0,0,6"
                        Padding="8"
                        Command="{Binding IncreaseQuantityCommand}"/>

                <Button Content="➖ Decrease Quantity"
                        Padding="8"
                        Command="{Binding DecreaseQuantityCommand}"/>

            </StackPanel>
        </Border>


        <Grid Grid.Column="1" Margin="15,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ADD BOOK SECTION -->
            <Border Grid.Row="0"
                    Padding="12"
                    CornerRadius="6"
                    Background="#FFFFFF"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1"
                    Margin="0,0,0,12">

                <StackPanel>

                    <TextBlock Text="Add Books to Store"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>

                    <ComboBox ItemsSource="{Binding AvailableBooks}"
                              SelectedItem="{Binding SelectedBook}"
                              DisplayMemberPath="Title"
                              Height="30"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="➕ Add to Store"
                                Width="140"
                                Margin="0,0,8,0"
                                Padding="8"
                                Command="{Binding AddBookToStoreCommand}"/>

                        <Button Content="🗑 Remove from Store"
                                Width="160"
                                Padding="8"
                                Command="{Binding RemoveBookFromStoreCommand}"/>
                    </StackPanel>

                </StackPanel>
            </Border>

            <!-- INVENTORY GRID -->
            <Border Grid.Row="1"
                    Padding="8"
                    CornerRadius="6"
                    Background="#FFFFFF"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1">

                <DataGrid ItemsSource="{Binding Inventory}"
                          SelectedItem="{Binding SelectedInventoryItem}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="110"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="150"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

            </Border>

        </Grid>
    </Grid>
</UserControl>