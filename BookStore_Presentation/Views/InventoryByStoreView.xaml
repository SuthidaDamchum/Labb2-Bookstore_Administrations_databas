<UserControl x:Class="BookStore_Presentation.Views.InventoryByStoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:UI="clr-namespace:BookStore_Presentation.ViewModels"
             xmlns:conv="clr-namespace:BookStore_Presentation.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=UI:InventoryByStoreViewModel, IsDesignTimeCreatable=False}">

    <UserControl.Resources>
        <conv:NullToBoolConverter x:Key="NullToBoolConverter"/>

        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#EEE"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DDD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CCC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#AAA"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Padding="10"
                CornerRadius="6"
                Background="#F5F5F5"
                BorderBrush="#D0D0D0"
                BorderThickness="1">

            <StackPanel>
                <TextBlock Text="📚 Stores"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <!-- Add Store Button -->
                <Button Content="➕ Add Store"
                        Width="120"
                        Margin="0,0,0,10"
                        Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding AddStoreCommand}"/>

                <Button Content="🗑 Delete Store"
                        Width="120"
                        Margin="0,0,0,10"
                        Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding DeleteStoreCommand}"
                        IsEnabled="{Binding SelectedStore, Converter={StaticResource NullToBoolConverter}}"/>

                <ListBox ItemsSource="{Binding Stores}"
                         SelectedItem="{Binding SelectedStore}"
                         DisplayMemberPath="StoreName"
                         Height="150"
                         Margin="0,0,0,15"/>

                <Separator Margin="0,0,0,15"/>

                <TextBlock Text="Inventory Quantity" HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <Button Content="➕ Increase"
                        Margin="0,0,0,6" FontSize="12" Width="120" 
                        Style="{StaticResource ToolbarButtonStyle}" 
                        Command="{Binding IncreaseQuantityCommand}"/>

                <Button Content="➖ Decrease" FontSize="12"  Width="120" Margin="0 0 0 6"
                        Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding DecreaseQuantityCommand}"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Padding="12"
                    CornerRadius="6"
                    Background="#FFFFFF"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1"
                    Margin="0,0,0,12">

                <StackPanel>
                    <TextBlock Text="Add Books to Store"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>

                    <ComboBox ItemsSource="{Binding AvailableBooks}"
                              SelectedItem="{Binding SelectedBookInInventory}"
                              DisplayMemberPath="Title"
                              Height="30"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="➕ Add to Store"
                                Width="120" FontSize="13" 
                                Margin="0,0,8,0"
                                Style="{StaticResource ToolbarButtonStyle}"
                                Command="{Binding AddBookToStoreCommand}"/>

                        <Button Content="🗑 Remove from Store" 
                                Width="160" FontSize="13"
                                Style="{StaticResource ToolbarButtonStyle}"
                                Command="{Binding RemoveBookFromStoreCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="1"
                    Padding="8"
                    CornerRadius="6"
                    Background="#FFFFFF"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1">

                <DataGrid ItemsSource="{Binding Inventory}"
                          SelectedItem="{Binding SelectedInventoryItem}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="110"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="150"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</UserControl>