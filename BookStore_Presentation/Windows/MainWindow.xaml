<Window x:Class="BookStore_Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        xmlns:UI="clr-namespace:BookStore_Presentation.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=UI:MainWindowViewModel, IsDesignTimeCreatable=True}"
        Title="Bookstore Administration"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- SIDEBAR -->
            <ColumnDefinition Width="220"/>
            <!-- MAIN CONTENT -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <Border Grid.Column="0"
                Background="#2D2D30"
                BorderBrush="#666"
                BorderThickness="0,0,1,0">

            <StackPanel Margin="0,10">

                <!-- LOGO / TITLE -->
                <TextBlock FontSize="16" Foreground="White" FontWeight="Bold">
                     📖 BOOKSTORE
                </TextBlock>

                <TextBlock Text="Administration"
                           Foreground="#BFBFBF"
                           FontSize="12"
                           Margin="15,0,15,20"/>

                <Separator Margin="10,0,10,15"
                           Background="#E1E1E1"/>

                <!-- NAV BUTTONS -->
                <Button Content="Inventory by Store"
                        Command="{Binding OpenInventoryByStoreCommand}"
                        Style="{StaticResource SidebarButtonStyle}"/>

                <Button Content="Books"
                        Command="{Binding OpenBookAdminCommand}"
                        Style="{StaticResource SidebarButtonStyle}"/>

                <Button Content="Authors"
                        Command="{Binding OpenAllAuthorsCommand}"
                        Style="{StaticResource SidebarButtonStyle}"/>

            </StackPanel>
        </Border>

        <!-- ================= MAIN CONTENT ================= -->
        <Border Grid.Column="1"
                Background="#F5F5F5"
                Padding="15">

            <ContentControl Content="{Binding CurrentViewModel}" />

        </Border>
    </Grid>
</Window>
